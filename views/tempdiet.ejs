<!-- views/diet.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Diet Page</title>
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script>
    $(document).ready(function() {
      let currentDay = 1;

      $('#nextDayButton').click(function() {
        currentDay++;
        // Update the day text input to the new day
        $('#day').val(currentDay);
      });
    });
  </script>
</head>
<body>
  <h2>Diet Page</h2>
  <% if (user) { %>
    <form action="/addDiet" method="post">
        <input type="hidden" name="userId" value="<%= user._id %>">
      <label for="day">Day:</label>
      <input type="text" id="day" name="day" value="1" readonly>
      <br>
      <label for="calories">Calories:</label>
      <input type="number" id="calories" name="calories" required>
      <br>
      <button type="submit">Add</button>
    </form>
    <button id="nextDayButton">Next Day</button>
  <% } else { %>
    <p>Please log in to access this page.</p>
  <% } %>
</body>
</html>
